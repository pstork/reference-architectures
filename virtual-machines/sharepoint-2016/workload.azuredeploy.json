{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "templateRootUri": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/pstork/template-building-blocks/master/",
      "metadata": {
        "description": "Root path for templates"
      }
    },
    "parameterRootUri": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/pstork/reference-architectures/pstork/SharePoint2016/virtual-machines/sharepoint-2016/parameters/",
      "metadata": {
        "decription": "Root path for parameters"
      }
    }
  },
  "variables": {
    "templates": {
      "deployment": {
        "loadBalancer": "[concat(parameters('templateRootUri'), 'templates/buildingBlocks/loadBalancer-backend-n-vm/azuredeploy.json')]",
        "virtualMachine": "[concat(parameters('templateRootUri'), 'templates/buildingBlocks/multi-vm-n-nic-m-storage/azuredeploy.json')]",
        "extensions": "[concat(parameters('templateRootUri'), 'templates/buildingBlocks/virtualMachine-extensions/azuredeploy.json')]"
      },
      "parameter": {
        "app": "[concat(parameters('parameterRootUri'), 'app.parameters.json')]",
        "web": "[concat(parameters('parameterRootUri'), 'web.parameters.json')]",
        "dch": "[concat(parameters('parameterRootUri'), 'dch.parameters.json')]",
        "srch": "[concat(parameters('parameterRootUri'), 'srch.parameters.json')]",
        "createFarmExtensions": "[concat(parameters('parameterRootUri'), 'spt-create-farm-extensions.parameters.json')]",
        "configFarmExtensions": "[concat(parameters('parameterRootUri'), 'spt-config-farm-extensions.parameters.json')]"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "ra-sp2016-app-deployment",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('templates').deployment.virtualMachine]"
        },
        "parametersLink": {
          "uri": "[variables('templates').parameter.app]",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "ra-sp2016-web-deployment",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('templates').deployment.loadBalancer]"
        },
        "parametersLink": {
          "uri": "[variables('templates').parameter.web]",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "ra-sp2016-dch-deployment",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('templates').deployment.virtualMachine]"
        },
        "parametersLink": {
          "uri": "[variables('templates').parameter.dch]",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "ra-sp2016-srch-deployment",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('templates').deployment.virtualMachine]"
        },
        "parametersLink": {
          "uri": "[variables('templates').parameter.srch]",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "ra-sp2016-create-farm-ext",
      "dependsOn": [
        "ra-sp2016-web-deployment",
        "ra-sp2016-dch-deployment",
        "ra-sp2016-srch-deployment",
        "ra-sp2016-app-deployment"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('templates').deployment.extensions]"
        },
        "parametersLink": {
          "uri": "[variables('templates').parameter.createFarmExtensions]",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "ra-sp2016-config-farm-ext",
      "dependsOn": [
        "ra-sp2016-create-farm-ext"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('templates').deployment.extensions]"
        },
        "parametersLink": {
          "uri": "[variables('templates').parameter.createFarmExtensions]",
          "contentVersion": "1.0.0.0"
        }
      }
    }
  ]
}
