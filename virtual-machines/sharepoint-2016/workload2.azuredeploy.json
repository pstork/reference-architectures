{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "templateRootUri": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/pstork/template-building-blocks/pstork/SharePoint2016/",
      "metadata": {
        "description": "Root path for templates"
      }
    },
    "parameterRootUri": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/pstork/reference-architectures/pstork/SharePoint2016/virtual-machines/sharepoint-2016/parameters/",
      "metadata": {
        "decription": "Root path for parameters"
      }
    }
  },
  "variables": {
    "templates": {
      "deployment": {
        "extensions": "[concat(parameters('templateRootUri'), 'templates/buildingBlocks/sharepoint-2016-extensions/azuredeploy.json')]"
      },
      "parameter": {
        "createFarmExtensions": "[concat(parameters('parameterRootUri'), 'spt-create-farm-extensions.parameters.json')]",
        "configFarmExtensions": "[concat(parameters('parameterRootUri'), 'spt-config-farm-extensions.parameters.json')]"
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "ra-sp2016-app1-farm-ext",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('templates').deployment.extensions]"
        },
        "parametersLink": {
          "uri": "[variables('templates').parameter.createFarmExtensions]",
          "contentVersion": "1.0.0.0"
        }
      }
    },
	{
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "ra-sp2016-app2-farm-ext",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('templates').deployment.extensions]"
        },
        "parametersLink": {
          "uri": "[variables('templates').parameter.createFarmExtensions]",
          "contentVersion": "1.0.0.0"
        }
      }
    }
  ]
}