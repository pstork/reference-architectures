{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "templateRootUri": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/pstork/template-building-blocks/master/",
      "metadata": {
        "description": "Root path for templates"
      }
    },
    "parameterRootUri": {
      "type": "string",
      "defaultValue": "https://raw.githubusercontent.com/pstork/reference-architectures/pstork/SharePoint2016/virtual-machines/sharepoint-2016/parameters/",
      "metadata": {
        "decription": "Root path for parameters"
      }
    }
  },
  "variables": {
    "templates": {
      "deployment": {
        "virtualNetworkGateway": "[uri(parameters('templateRootUri'), 'templates/buildingBlocks/vpn-gateway-vpn-connection/azuredeploy.json')]"
      },
      "parameter": {
        "virtualNetworkGateway": "[uri(parameters('parameterRootUri'), 'virtualNetworkGateway.parameters.json')]"
      }
    }
  },
  "resources": [
  {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2015-01-01",
      "name": "ra-sp2016-vpn-deployment",
      "dependsOn": [
        "ra-sp2016-vnet-deployment"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[variables('templates').deployment.virtualNetworkGateway]"
        },
        "parametersLink": {
          "uri": "[variables('templates').parameter.virtualNetworkGateway]"
        }
      }
   }
  ]
}

